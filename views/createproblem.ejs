<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <style>
      .card {
        width: fit-content;
        min-width: 700px;
        border: 1px solid red;
        margin: 40px auto;
        background-color: white;
        border-radius: 20px;
        border: 2px solid blue;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px,
          rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
      }
      form {
        display: flex;
        flex-direction: column;
        margin: 5px;
        padding: 5px;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        /* border: 1px solid red; */
        margin: 5px;
        /* padding: 10px ; */
      }
      .form-group > * {
        display: flex;
        flex-direction: column;
        font-size: 20px;
      }

      input {
        margin: 5px 0;
        padding: 5px;
        border-radius: 5px;
        font-family: "Ubuntu";
        width: 300px;
      }

      label {
        color: rgb(77, 76, 76);
      }

      .btn {
        margin: 10px 0;
        padding: 10px;
        text-align: center;
      }
      #editor,.ql-toolbar{
        width: 600px !important;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <%- include('include/header.ejs') %> 
    <%- include('include/navbar.ejs') %>

    <div class="card">
      <form id="form">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Enter title"
          />
        </div>
        <div class="form-group">
          <label for="memorylimit">Memory Limit per testcase:</label>
          <input
            type="text"
            id="memorylimit"
            name="memorylimit"
            placeholder="Enter Memory Limit"
          />
        </div>

        <div class="form-group">
          <label for="timelimit">Time Limit per testcase:</label>
          <input
            type="text"
            id="timelimit"
            name="timelimit"
            placeholder="Enter Time Limit"
          />
        </div>
        <div class="form-group editor">
          <label for="statement">Problem Statement</label>
          <div class="wrapper">
            <div id="editor"></div>
          </div>
        </div>
        <button type="submit" class="btn">Submit</button>
      </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <!-- Initialize Quill editor -->
    <script>
      var quill = new Quill("#editor", {
        theme: "snow",
        wrap: 1,
      });
    </script>
    <script>
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        let form = document.getElementById("form");

        let title = form["title"].value;
        let memorylimit = form["memorylimit"].value;
        let timelimit = form["timelimit"].value;
        let statement = quill.root.innerHTML;
        try {
          let pkg = { title, memorylimit, timelimit, statement };
          // console.log(Object.keys(pkg.statement))
          console.log(pkg);
          fetch("/createproblem", {
            method: "POST",
            body: JSON.stringify(pkg),
            headers: {
              "Content-Type": "application/json",
            },
          })
            .then((res) => res.json())
            .then((data) => {
              window.location.href = data.url;
            });
        } catch (error) {
          console.log(error);
          console.log("Error in creating problem");
        }
      });
    </script>
  </body>
</html>
